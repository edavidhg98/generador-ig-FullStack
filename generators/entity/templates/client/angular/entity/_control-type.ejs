<%
  if (!attribute.control) {
    let controlType;
    let attributeType = attribute.type.toLowerCase();
    if (attributeType === 'date') {
      controlType = 'date';
    } else if(attributeType === 'number') {
      controlType = 'number';
    } else if(attributeType === 'boolean') {
      controlType = 'checkbox';
    } else {
      controlType = 'text';
    }
_%>
<input type="<%= controlType %>" id="field_<%= attribute.name %>" *ngIf="<%= entityName.camel %>" class="form-control" name="<%= attribute.name %>" [(ngModel)]="<%= entityName.camel %>.<%= attribute.name %>" <%- include _validation_attributes -%> />
<input type="<%= controlType %>" id="field_<%= attribute.name %>" *ngIf="!<%= entityName.camel %>" class="form-control" name="<%= attribute.name %>" ngModel <%- include _validation_attributes _%> />
<% } else {
  const inputTypes = [ 'date', 'datetime-local', 'email', 'month', 'number', 'password', 'time', 'url', 'week', 'text' ];
  if (attribute.control === 'textarea') {
_%>
<textarea id="field_<%= attribute.name %>" *ngIf="<%= entityName.camel %>" name="<%= attribute.name %>" class="form-control" [(ngModel)]="<%= entityName.camel %>.<%= attribute.name %>" <%- include _validation_attributes _%>></textarea>
<textarea id="field_<%= attribute.name %>" *ngIf="!<%= entityName.camel %>" name="<%= attribute.name %>" class="form-control" ngModel <%- include _validation_attributes _%>></textarea>
<% } else if (inputTypes.includes(attribute.control)) { _%>
<input type="<%= attribute.control %>" id="field_<%= attribute.name %>" *ngIf="<%= entityName.camel %>" class="form-control" name="<%= attribute.name %>" [(ngModel)]="<%= entityName.camel %>.<%= attribute.name %>" <%- include _validation_attributes -%> />
<input type="<%= attribute.control %>" id="field_<%= attribute.name %>" *ngIf="!<%= entityName.camel %>" class="form-control" name="<%= attribute.name %>" ngModel <%- include _validation_attributes _%> />
<%  } else { _%>
<input type="text" id="field_<%= attribute.name %>" *ngIf="<%= entityName.camel %>" class="form-control" name="<%= attribute.name %>" [(ngModel)]="<%= entityName.camel %>.<%= attribute.name %>" <%- include _validation_attributes -%> />
<input type="text" id="field_<%= attribute.name %>" *ngIf="!<%= entityName.camel %>" class="form-control" name="<%= attribute.name %>" ngModel <%- include _validation_attributes _%> />
<%_ }} _%>
